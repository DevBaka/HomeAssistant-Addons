<icecast>
  <limits>
    <clients>100</clients>
    <sources>2</sources>
  </limits>

  <authentication>
    <admin-user>admin</admin-user>
    <admin-password>hackme</admin-password>
  </authentication>

  <hostname>localhost</hostname>
  <listen-socket>
    <port>8000</port>
  </listen-socket>

  <paths>
    <basedir>/var/lib/icecast</basedir>
  </paths>

  <!-- Run Icecast as icecast user -->
  <changeowner>
    <user>icecast</user>
    <group>icecast</group>
  </changeowner>

  <mount>
    <mount-name>/stream</mount-name>
    <file>/tmp/stream.mp3</file>
  </mount>
</icecast>
